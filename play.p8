function btni(key)
 return btn(key) and 1 or 0
end

function move(self,l,r,u,d)
 local speed = self.speed
 if btni(l)+btni(r)
    +btni(u)+btni(d) == 2 then
  speed *= .707
 end
 if(btn(l)) then
  self.posx-=speed
 end
 if(btn(r)) then
  self.posx+=speed
 end
  if(btn(u)) then
  self.posy-=speed
 end
  if(btn(d)) then
  self.posy+=speed
 end
end
