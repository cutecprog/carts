function __init__()
 local rsin =
  --rounded pico8 sin values
  --each step is 1/8 of circle
  {[0]=0,-1,-1,-1,0,1,1,1}

 local dpad_bf =
  --holds dpad bit fields
  --â¬‡ï¸â¬†ï¸âž¡ï¸â¬…ï¸
  {0b0010,0b0110,0b0100,0b0101,
   0b0001,0b1001,0b1000,0b1010}

 ticks = 0

 comp = {}
  --relates an angle to values
  --to add to posx, posy
  --0={1,0},1={1,-1}...7={1,1}
 for i=0,7 do
  comp[i] =
   --{cos(i)=x, sin(i)=y }
   {rsin[(i-2)%8],rsin[i]}
 end

 dpad_angle={}
  --relates an angle to
  --a specific bit field
  --âž¡ï¸=0, â¬†ï¸âž¡ï¸=1...â¬‡ï¸=6,â¬‡ï¸âž¡ï¸=7
 for i=1,8 do
  dpad_angle[dpad_bf[i]] = i-1 
 end
end
