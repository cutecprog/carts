--update and draw functions
function move_around()
 local speed = pc.speed
 local _bearing = dpad_bearing()
 if btn(❎) then
  speed *= 1.5
 end
 if btnp(🅾️) then
  mode = select_action
 end
 if _bearing then
  pc.bearing = _bearing
  move(pc,speed, pc.bearing)
 end
end

function move_around_draw()
 cls()
 map(0,0,-pc.posx,-pc.posy,16,16)
 spr(1,60,60)
end

function select_action()
 if btnp(❎) then
  mode = move_around
 end
 if btnp(🅾️) then
  sfx(0)
 end
end
