--frequently called functions

function move(self, spd, th)
 --move self by a 4-bit vector
 --spd 1-bit (slow or fast)
 --th 3-bit (45 deg resolution) 
 local compx = comp[th][1] 
 local speed =
  spd == 0 and .98 or 1.95
 if compx < 0 then
  self.flipx = false
 elseif compx > 0 then
  self.flipx = true
 end
 if(ticks%4==0) then
  self.c = (self.c + 1)%3 +1
 end 
 self.posx += speed 
  * compx
 self.posy += speed 
  * comp[th][2]
end
