--update and draw functions
function move_around()
 if(btnp()&16!=0) mode=act_menu
  --🅾️
 if btn()&15 != 0 then
  --⬇️⬆️➡️⬅️
  local th=dpad_angle[btn()&15]
  if(th) move(pc, btn()&32, th)
   --❎
 else
  pc.c = 0
 end
end

function draw_move_around()
 cls()
 camera(pc.posx-60,pc.posy-60)
 map()
 spr(pc.c+pc.fr,
     pc.posx,pc.posy,1,1,
     pc.flipx)
end

function act_menu()
 if btnp(❎) then
  mode = move_around
 end
 if btnp(🅾️) then
  load("bits.p8")
 end
end
