--util
comp = {}
for i=0, 7 do
 comp[i] =
   {sin(i/8), cos(i/8)}
end

dpad_angle={}
--_dpad_bf holds dpad bit fields
local _dpad_bf = 
  {8,9,1,5,4,6,2,10}
for i=1,8 do
 --relate an angle value to
 --a specific bit field
 dpad_angle[_dpad_bf[i]] = i-1 
end


function move(self, fast, angle)
 local speed =
  fast == 0 and 3 or 4.5
 self.posx += speed * comp[angle][1]
 self.posy += speed * comp[angle][2]
end
